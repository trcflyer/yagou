@import '../common/common.wxss';
.container {
    background-color: #F2f2f2;
}

swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}
/*分类*/
.index-nav {
  height: 150rpx;
  margin-top: 10rpx;
  /*background: red;*/
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  color: #646464;
}
.index-nav .l-c-c {
  width: 25%;
  text-align: center;
  border-right: 1px solid #F2f2f2;
}
.index-nav image {
  width: 42px;
  height: 42px;
}
view.text-title {
    display: flex;
    align-items: center;
    position: relative;
    padding: 5px 5px 0px 6px;
    font-size: 15px;
    color: #656565;
}

view.text-title:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}

.line_flag {
    width: 3px;
    height: 15px;
    display: inline-block;
    background-color: #f9f027;
}
view.text-title text {
    margin-left: 10px;
    line-height: 18px;
    font-weight: bold;
}

.newest-box .newest-list{
   /* display: inline-block;
    margin:0 5rpx 5rpx 0;
    border-radius: 10px;*/
    text-align: center;
  padding-top: 10px;
}

.newest-box .newest-list .limage{
    height: 320rpx;
    width: 100%;
    background: #fff;
}
.newest-box .newest-list .limage image{
    height: 100%;
    width: 100%;
}
.newest-box .newest-list .info{
    width: 100%;
    height: 160rpx;
    overflow: hidden;
    background: #fff;
}

.newest-box .newest-list .title{
    display: block;
    text-align: center;
    width: 100%;
    height: 33rpx;
    line-height: 33rpx;
    color: #333;
    overflow: hidden;
    font-size: 35rpx;
    margin-top: 20rpx;
}

.newest-box .newest-list .desc{
    display: block;
    text-align: center;
    position: relative;
    width: auto;
    height: 24rpx;
    line-height: 24rpx;
    overflow: hidden;
    color: #999;
    font-size: 24rpx;
    margin-top: 16rpx;
    margin-bottom: 20rpx;
}

.newest-box .newest-list .price{
    display: block;
    text-align: center;
    width: 100%;
    height: 27rpx;
    line-height: 27rpx;
    overflow: hidden;
    color: #b4282d;
    font-size: 27rpx;
}